<h2>Search for train tickets</h2>

<% if @error %>
    <div id="error_explanation">
      <h2><%= @error %></h2>
    </div>
<% end %>

<%= form_tag(new_search_path, method: "get") do %>

  <div class="field">
     <%= label_tag :station_depart, "Depart from:" %>
     <%= select_tag :station_depart, options_from_collection_for_select(RailwayStation.all, "id", "title") %>
  </div>

  <div class="field">
     <%= label_tag :station_arrive, "Arrive to:" %>
     <%= select_tag :station_arrive, options_from_collection_for_select(RailwayStation.all, "id", "title") %>
  </div>

  <%= submit_tag("Search") %>
<% end %>

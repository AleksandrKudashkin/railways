<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
	<strong>At the station:</strong>
	<% if @train.current_station.present? %>
		<%= @train.current_station.title %>
	<% else %>
		Not specified
	<% end %>
</p>

<p>
  <strong>On the route:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Not specified
  <% end %>
</p>

<p>
  <strong>Coaches of the train:</strong>
  <% if @coaches.empty? %>
    Not specified
  <% else %> 
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th colspan="2">Type</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "trains/coach", collection: @coaches %>
      </tbody>
    </table>
  <% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>

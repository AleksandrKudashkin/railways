<h2><%= t('.title') %></h2>

<% if @error %>
    <div id="error_explanation">
      <h2><%= @error %></h2>
    </div>
<% end %>
  <%= form_tag new_search_path, method: "get", id:"search_form" do %>
<div class="row">
  <div class="col-md-4">
    <%= label_tag :station_depart, t('.station_depart') %>
  </div>
  <div class="col-md-4">
    <%= label_tag :station_arrive, t('.station_arrive') %>
  </div>
  <div class="col-md-4">
  </div>
</div>
<div class="row">
    <div class="col-md-4">
      <%= select_tag :station_depart, options_from_collection_for_select(@stations, "id", "title"), class: 'form-control' %>
    </div>

    <div class="col-md-4">
        <%= select_tag :station_arrive, options_from_collection_for_select(@stations, "id", "title"), class: 'form-control' %>
    </div>
    
    <div class="col-md-4">
        <%= submit_tag t('common.search'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
